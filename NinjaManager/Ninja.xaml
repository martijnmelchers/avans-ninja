<Window x:Class="NinjaManager.NinjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaManager.ViewModels"
        mc:Ignorable="d"
        Title="Ninja" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Ninja.Name}"></TextBlock>
            <TextBlock Text="{Binding Ninja.Strength}"></TextBlock>
            <TextBlock Text="{Binding Ninja.Agility}"></TextBlock>
            <TextBlock Text="{Binding Ninja.Intelligence}"></TextBlock>
            <TextBlock Text="{Binding Ninja.Gold}"></TextBlock>
            <Button Command="{Binding NinjaChangeCommand}">Edit name</Button>
        </StackPanel>
    </Grid>
</Window>
